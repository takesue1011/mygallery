<div class="container">
  <h2 align="center">会員登録</h2>
  <HR width="75%">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      ニックネーム<br />
      <%= f.email_field :nickname, autofocus: true, maxlength: "14" %>
    </div>

    <div class="field">
      メールアドレス<br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      パスワード
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      パスワード（確認）<br />  <!-- <%= f.label :password_confirmation %><br /> -->
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <button type="submit" class="btn btn-default" align="center">登録する！</button>
  <% end %>

  <%= render "devise/shared/links" %>
</div>