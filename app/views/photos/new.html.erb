<div class="container">
  <h2>写真を投稿</h2>
  <%= form_for @photo do |f| %>
    <div class="field">
      <%= f.label :title, "タイトル" %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :photographer, "写真家" %><br>
      <%= f.text_field :photographer %>
    </div>
    <div class="field">
      <%= f.label :caption, "説明文" %><br>
      <%= f.text_area :caption %>
    </div>
    <div class="field">
      <%= f.label :image, "投稿する写真" %><br>
      <%= f.file_field :image %>
    </div>
    <div class="actions">
      <%= f.submit "登録する！" %>
    </div>
  <% end %>
</div>